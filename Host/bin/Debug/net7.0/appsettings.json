{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  
  "ReverseProxy" : {
    "Clusters" : {
      "App" : {
        "Destinations" :{
          "App" : {
            "Address" : "https://localhost:7251"
          }
        }
      },
      "Api" : {
        "Destinations" :{
          "Api" : {
            "Address" : "https://localhost:7210"
          }
        }
      }
    },
    "Routes" : {
      "GoogleRoute": {
        "ClusterId": "Api",
        "Match" : {
          "Path" : "/api/{**catch-all}"
        },
        "Transforms" : [{
          "PathRemovePrefix": "/api"
        }]
      },
      "ClientRoute": {
        "ClusterId": "App",
        "Match": {
          "Path": "{**catch-all}"
        }
      }
    }
  }
  
}
